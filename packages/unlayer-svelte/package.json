{
  "name": "svelte-unlayer-editor",
  "version": "1.0.0",
  "description": "A Svelte wrapper for the Unlayer Email Editor, providing a clean and type-safe interface for building email editors in Svelte applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shakeelahmed5/unlayer.git"
  },
  "homepage": "https://github.com/shakeelahmed5/unlayer#readme",
  "bugs": {
    "url": "https://github.com/shakeelahmed5/unlayer/issues"
  },
  "author": "Svelte Email Editor Team",
  "license": "MIT",
  "peerDependencies": {
    "svelte": "^5.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "svelte": "^5.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "svelte",
    "svelte-email-editor",
    "unlayer",
    "email-editor",
    "email-builder",
    "wysiwyg",
    "builder",
    "drag-and-drop",
    "email-template",
    "newsletter",
    "marketing",
    "typescript",
    "svelte5",
    "svelte-kit",
    "component",
    "wrapper"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
